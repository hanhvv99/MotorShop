<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".guarantee.GuaranteeDonhangActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="@string/TextViewTTDBH"
        android:textSize="25dp"
        android:textColor="#FFFF00"
        android:background="#000"/>

    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/EditTextSearchView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@color/light_gray"
            android:backgroundTint="@color/white"
            android:hint="@string/EditTextSearchView"
            android:inputType="textCapWords"
            app:actionViewClass="androidx.appcompat.widget.SearchView"
            app:showAsAction="always"
            android:drawableLeft="@drawable/ic_search_black_24dp"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:background="#000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TextViewMaDH"
            android:textColor="#FFFF00"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/TextViewNgayTao"
            android:textSize="20dp"
            android:textColor="#FFFF00"
            android:textStyle="bold" />

    </LinearLayout>
    <ListView
        android:id="@+id/lvGuatantee_DH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:textColor="#000"/>
</LinearLayout>