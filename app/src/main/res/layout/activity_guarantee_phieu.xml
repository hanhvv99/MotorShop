<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".guarantee.GuaranteePhieuActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="center"
    android:text="@string/TextViewPhieuBH"
    android:textSize="25dp"
    android:textColor="#FFFF00"
    android:background="#000"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_dssp_bh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách SP bảo hành đơn: "
        android:textSize="20dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/TextViewMaDH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/TextViewMaDH"
        android:textSize="20dp"
        android:textColor="#e32"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="Lọc: "
        android:textSize="20dp"
        android:textColor="#000"/>

    <ImageView
        android:id="@+id/ImageViewXe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/iconxe_24"/>

    <ImageView
        android:id="@+id/ImageViewPhuTung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:src="@drawable/iconphutung_24" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="Các SP của đơn: "
        android:textSize="20dp"
        android:textColor="#000"/>

    <Spinner
        android:id="@+id/SpinnerSP"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:spinnerMode="dropdown"
        android:textColor="#000"
        android:textSize="20dp" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:background="#000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TextViewMaBH"
        android:textColor="#FFFF00"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/TextViewTenSP"
        android:textColor="#FFFF00"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/TextViewNgayTao"
        android:textSize="20dp"
        android:textColor="#FFFF00"
        android:textStyle="bold" />

</LinearLayout>
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/lvGuatantee_P"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#000"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddBH_P"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add"
        app:tint="@color/white" />
</FrameLayout>
</LinearLayout>