<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".guarantee.GuaranteeChitietActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="@string/TextViewCTBH"
        android:textSize="25dp"
        android:textColor="#FFFF00"
        android:background="#000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Mã BH: "
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/EditTextMaBH"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/background_shape"
            android:hint="@string/EditTextMaBH"
            android:inputType="none"
            app:textAllCaps="true"
            android:maxLines="1"
            android:padding="15dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Mã N/Viên: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TextViewMaNV"
            android:layout_width="104dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="@string/TextViewMaNV"
            android:textColor="#FF4081"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Mã DH: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TextViewMaDH"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="@string/TextViewMaDH"
            android:textColor="#FF4081"
            android:textSize="20dp" />

        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Ngày: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TextViewNgayTao"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="@string/TextViewNgayTao"
            android:textColor="#E32"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Tên sản phẩm: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TextViewTenSP"
            android:layout_width="219dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="@string/TextViewTenSP"
            android:textColor="#FF4081"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Thêm nội dung bảo hành: "
            android:textColor="#000"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/ImageButtonSave"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="@string/ImageButtonSave"
            android:background="@drawable/click_change_save" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Nội Dung BH: "
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/EditTextNDBH"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:textSize="20dp"
            android:inputType="text"
            android:maxLines="2"
            android:background="@drawable/background_shape"
            android:textStyle="bold"
            android:textColor="#000"
            android:hint="@string/EditTextNDBH"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Phí BH: "
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/EditTextPBH"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:textSize="20dp"
            android:inputType="number"
            android:maxLines="2"
            android:background="@drawable/background_shape"
            android:textStyle="bold"
            android:textColor="#000"
            android:hint="@string/EditTextPBH"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Danh sách nội dung bảo hành của sản phẩm:"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="#000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/EditTextNDBH"
            android:textColor="#FFFF00"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/EditTextPBH"
            android:textSize="20dp"
            android:textColor="#FFFF00"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvGuatantee_CT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:textColor="#000"/>
</LinearLayout>