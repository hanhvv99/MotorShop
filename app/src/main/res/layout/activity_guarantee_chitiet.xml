<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".guarantee.GuaranteeChitietActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/TextViewCTBH"
            android:textSize="25dp"
            android:textColor="#FF0000"
            android:background="@color/light_gray"/>

        <TextView
            android:id="@+id/TextViewNgayTao"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:hint="@string/TextViewNgayTao"
            android:textColor="#E32"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Mã BH: "
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/EditTextMaBH"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:background="@drawable/background_shape"
            android:hint="@string/EditTextMaBH"
            android:inputType="none"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            app:textAllCaps="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Mã N/Viên: "
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextViewMaNV"
            android:layout_width="104dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:hint="@string/TextViewMaNV"
            android:textColor="#FF4081"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Mã DH: "
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextViewMaDH"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:hint="@string/TextViewMaDH"
            android:textColor="#FF4081"
            android:textSize="15dp" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Tên sản phẩm: "
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextViewTenSP"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:hint="@string/TextViewTenSP"
            android:textColor="#FF4081"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/EditTextNDBH"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:inputType="text"
            android:maxLines="2"
            android:background="@drawable/background_shape"
            android:textColor="#000"
            android:hint="@string/EditTextNDBH"/>

        <EditText
            android:id="@+id/EditTextPBH"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:inputType="number"
            android:maxLines="2"
            android:background="@drawable/background_shape"
            android:textColor="#000"
            android:hint="@string/EditTextPBH"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Danh sách nội dung bảo hành của sản phẩm:"
            android:textColor="#000"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/light_gray">

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/EditTextNDBH"
            android:textColor="#FF0000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/EditTextPBH"
            android:textSize="15dp"
            android:textColor="#FF0000"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvGuatantee_CT"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingVertical="10dp"
        android:textColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Thêm nội dung bảo hành: "
            android:textColor="#000"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/ImageButtonEdit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="@string/ImageButtonEdit"
            android:background="@drawable/click_change_edit" />

        <TextView
            android:id="@+id/TextViewTongPBH"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:hint="@string/TextViewTongPBH"
            android:textColor="#FF0000"
            android:textSize="15dp"/>
    </LinearLayout>
</LinearLayout>